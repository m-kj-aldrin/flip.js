{
  "name": "flip.js-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "Monorepo for @mkja/flip (core) and @mkja/flip-group (custom element)",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite test",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier -w .",
    "build": "npm run build:flip && npm run build:flip-group",
    "build:flip": "npm run build -w @mkja/flip",
    "build:flip-group": "npm run build -w @mkja/flip-group"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "eslint": "^9.6.0",
    "globals": "^15.11.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.9.2",
    "vite": "^5.4.2",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
