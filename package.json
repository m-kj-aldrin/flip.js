{
  "name": "@mkja/flip-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "typescript": "^5.9.2"
  },
  "scripts": {
    "build": "npm run build -w @mkja/flip && npm run build -w @mkja/flip-group",
    "test": "npm -w @mkja/flip test && npm -w @mkja/flip-group test",
    "publish:flip": "npm publish --access public -w @mkja/flip",
    "publish:group": "npm publish --access public -w @mkja/flip-group"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
