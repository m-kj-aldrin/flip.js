  "description": "Tiny FLIP animation utility (translate + optional scale) with Promise-based play and reduced-motion support.",
  "type": "module",
  "license": "MIT",
  "main": "src/flip.js",
  "module": "src/flip.js",
  "exports": "./src/flip.js",
  "types": "dist/flip.d.ts",
